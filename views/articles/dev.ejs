<% function UTC(x){ %>
<%     if(x){ %>
<%         return x.getTime() %>
<%     } %>
<% } %>



<%- include("../partials/header") %>



<div class="container">
    
	<form action="/articles" method="POST">
		<input type="text" name="article[title]" placeholder="title">
		<input type="text" name="article[description]" placeholder="description...">
		<input type="submit" value="送出">
	</form>
	
	<% allarticles.forEach(function(article){ %>
	    
	    <h3>title: <%= article.title %></h3>
	    <h3>description: <%= article.description %></h3>
	    <h3>author: <%= article.authorid.username %></h3>
	    <h3>author's nickname: <%= article.authorid.nickname %></h3>
	    <h3>created: <UTC><%= UTC(article.created) %></UTC></h3>
	    <h3>isedited: <%= article.isedited %></h3>
	    <h3>edited: <UTC><%= UTC(article.edited) %></UTC></h3>
	    

	    <% if(currentUser && (currentUser._id.equals(article.authorid._id))){ // better??? %>
	        <a href="/articles/<%= article._id %>/edit">edit</a>
	
	        <form action="/articles/<%= article._id %>?_method=delete" method="POST">
    	        <input type="submit" value="delete">
            </form>
	    <% }; %>
	
	    
		<hr>
	    <!-- comments -->

	<% }); %>
	
	
	
</div>



<%- include("../partials/footer") %>
