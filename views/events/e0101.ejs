<% var uid = null %>
<% var isUidFinished = -2 %>
<% if(currentUser){ %>
	<% uid = currentUser._id %>
    <% isUidFinished = event.finish_uid.indexOf(uid) %>
<% } %>



<%- include("../partials/header") %>

